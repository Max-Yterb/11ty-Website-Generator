{
  "name": "11ty-website-generator",
  "version": "1.0.0",
  "description": "A CLI tool to generate modern 11ty websites with CMS integration, multilanguage support, and automated deployment",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "release": "standard-version",
    "validate-yaml": "node validate-yaml.js"
  },
  "keywords": [
    "11ty",
    "static-site",
    "generator",
    "cms",
    "multilanguage",
    "cli",
    "netlify",
    "eleventy"
  ],
  "author": "Massimiliano Bertinetti <max.yterb@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Max-Yterb/11ty-Website-Generator.git"
  },
  "homepage": "https://max-yterb.github.io/11ty-Website-Generator",
  "bugs": {
    "url": "https://github.com/Max-Yterb/11ty-Website-Generator/issues"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0"
  },
  "bin": {
    "create-11ty-site": "main.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run format"
    }
  }
}
